{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist", // The directory where compiled JavaScript files will be placed
    "rootDir": "./src", // The directory containing your TypeScript source files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"], // Specify the files to include in the compilation
  "exclude": ["node_modules"]
}
